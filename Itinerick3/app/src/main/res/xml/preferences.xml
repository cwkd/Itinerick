<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:id="@+id/checkDarkTheme"
        android:defaultValue="false"
        android:key="@string/dark_theme_key"
        android:summaryOff="Normal"
        android:summaryOn="Dark"
        android:title="Change Theme" />
    <CheckBoxPreference
        android:id="@+id/checkWhackyName"
        android:defaultValue="false"
        android:key="@string/whacky_name_key"
        android:summaryOff="Normal"
        android:summaryOn="Whacky"
        android:title="Change Name" />
    <CheckBoxPreference
        android:id="@+id/checkBigButtons"
        android:defaultValue="false"
        android:key="@string/big_button_key"
        android:summaryOff="Normal"
        android:summaryOn="Big"
        android:title="Change Button Size" />
</PreferenceScreen>